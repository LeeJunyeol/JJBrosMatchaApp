<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_user_bookmark_truck_photo"
    android:layout_width="60dp"
    android:layout_height="60dp"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
    android:id="@+id/tv_user_bookmark_truck_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
        android:text=""/>
    <TextView
        android:id="@+id/tv_user_bookmark_truck_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""/>
    <TextView
        android:id="@+id/tv_user_bookmark_truck_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""/>
    <TextView
        android:id="@+id/tv_user_bookmark_truck_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""/>

    </LinearLayout>

</LinearLayout>