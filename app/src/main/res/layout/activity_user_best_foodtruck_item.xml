<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_user_best_foodtruck_rank"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_user_best_foodtruck_img"
        android:layout_width="70dp"
        android:layout_height="match_parent"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RatingBar
            android:id="@+id/RatingBar_user_best_foodtruck_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numStars="5"
            />

        <TextView
            android:id="@+id/tv_user_best_foodtruck_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_user_best_foodtruck_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_user_best_foodtruck_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_user_best_foodtruck_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
           />

    </LinearLayout>

</LinearLayout>