<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_owner_tmtbl"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout_owner_tmtbl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".owner.OwnerTimeTableActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CalendarView
                android:id="@+id/cv_owner_tmtbl"
                android:layout_width="match_parent"
                android:layout_height="318dp"
                android:layout_gravity="center_horizontal" />

            <ScrollView
                android:id="@+id/sv_owner_tmtbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/lv_owner_tmtbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_list_owner_tmtbl"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_gravity="start"
            android:background="@drawable/border_rectangle"
            android:orientation="vertical"
            android:paddingTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:layout_margin="14dp"
                    android:src="@drawable/ic_baisc_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <Button
                        android:id="@+id/btn_myinfo_update_tmtbl"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:text="@string/btn_user_myinfo_update" />

                    <Button
                        android:id="@+id/btn_myinfo_logout_tmtbl"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:text="@string/btn_user_myinfo_logout" />
                </LinearLayout>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:stretchColumns="*">

                <TableRow>

                    <Button
                        android:id="@+id/btn_myinfo_bookmark_turck_tmtbl"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:text="@string/btn_user_myinfo_bookmark" />

                    <Button
                        android:id="@+id/btn_myinfo_coupon_tmtbl"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:text="@string/btn_user_myinfo_coupon" />

                    <Button
                        android:id="@+id/btn_myinfo_review_admin_tmtbl"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:text="@string/btn_user_myinfo_review" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btn_myinfo_event_notice_tmtbl"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="@string/btn_user_myinfo_event_notice" />

            <Button
                android:id="@+id/btn_myinfo_setting_tmtbl"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="@string/btn_user_myinfo_setting" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>